generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// 1. User Model (Updated with Task requirements)
model User {
  id            String  @id @default(uuid())
  email         String  @unique
  name          String?
  emailVerified Boolean @default(false)
  image         String?
  password      String? // password field mandatory for bcrypt hashing

  // Task Requirements: IDs
  public_id   String @unique @default(uuid())
  internal_id String @unique @default(nanoid()) // requirement: internal_id

  // Task Requirements: Status & Recovery
  status    String    @default("ACTIVE") // ACTIVE, SUSPENDED, BLOCKED, DORMANT
  deletedAt DateTime? // For 60-day recovery logic

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roleId Int?
  role   Role? @relation(fields: [roleId], references: [id])

  sessions  Session[]
  accounts  Account[]
  auditLogs AuditLog[] // New: for security tracking
}

// 2. Session Model (For Better-Auth & One device logic)
model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 3. AuditLog Model (Requirement: Login logs, IP, Device, Geo)
model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String // LOGIN, LOGOUT, DELETE_ATTEMPT
  ip        String?
  device    String?
  geo       String? // Requirement: save geo-location
  createdAt DateTime @default(now())
}

// 4. Role & Permission Models (RBAC)
model Role {
  id          Int              @id @default(autoincrement())
  name        String           @unique // ADMIN, USER, SUB_ADMIN
  users       User[]
  permissions RolePermission[]
}

model Permission {
  id     Int              @id @default(autoincrement())
  action String           @unique // e.g., user.read, project.create
  roles  RolePermission[]
}

model RolePermission {
  roleId       Int
  permissionId Int
  role         Role       @relation(fields: [roleId], references: [id])
  permission   Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

// Better-Auth Specific Models
model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?
}
